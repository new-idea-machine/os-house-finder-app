{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "coverage"
  ],
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
  "files": ["src/types.d.ts"]
}
