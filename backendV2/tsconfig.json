{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"],
      "@config/*": ["src/config/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@models/*": ["src/models/*"],
      "@routers/*": ["src/routers/*"],
      "@middleware/*": ["src/middleware/*"],
      "@validator/*": ["src/validator/*"],
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "types": [
      "node",
      "jest"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "coverage"
  ],
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
  // "files": ["src/types.d.ts"]
}