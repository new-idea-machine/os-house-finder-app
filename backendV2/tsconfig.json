{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", 
    "dist", 
    "__tests__", 
    "coverage"
  ],
  "include": [
    "./*.js",
    "src/**/*.ts",
  ],
}
